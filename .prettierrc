{
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "importOrder": [
        "^[a-zA-Z]+(.*)$",
        "^@shared/(.*)$",
        "^@modules/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
        "classProperties",
        "decorators-legacy",
        "typescript"
    ]
}
